<Page actionBarHidden="true"
	navigatingTo="onNavigatingTo"
	xmlns="http://schemas.nativescript.org/tns.xsd"
	xmlns:ui="@nativescript/google-mobile-ads"
	xmlns:gv="@nativescript-community/ui-collectionview"
	class="bg-gray-100"
	>

  <GridLayout rows="auto, auto, auto, *, auto" columns="*" class="p-4">
    <!-- Header -->
    <GridLayout row="0" rows="auto,auto" columns="auto, 20, *, auto" class="items-center">
      <!-- Ikon kiri -->
      <Label text="&#xf5da;" class="text-black text-[42px] fas ml-2" row="0" rowSpan="2" col="0" />
      <!-- Teks Google -->
      <Label text="Kamus Besar" textWrap="true" class="text-left text-black-900 text-[18px] font-bold" row="0" col="2" />

      <Label text="Bahasa Indonesia" textWrap="true" class="text-left text-black text-[24px] font-bold" row="1" col="2" />
      <!-- Ikon kanan -->
      <!-- <Label text="&#xf05a;" class="text-black-500 text-2xl fas mr-2" col="3" /> -->
			<Button row="0" rowSpan="2" col="3"
				textWrap="true"
				tap="aboutTap"
				class="text-center text-white border-none rounded-full bg-gray-500 active:bg-gray-300 active:scale-95 transition duration-150"
				width="35"
				height="35"
			>
				<Span text="&#xf129;" class="fas" />
			</Button>
    </GridLayout>

    <!-- Search Bar -->
    <StackLayout row="1" class="mt-5 bg-white rounded-2xl border-2 border-gray-200 py-3 px-5">
      <GridLayout columns="auto, *, auto" class="items-center">
        <!-- Ikon Search -->
        <Label text="&#xf002;" class="text-black text-2xl fas" tap="searchTap" col="0" />
        <!-- Input Search -->
        <Label text="Cari kata..." class="text-base text-black mx-4 active:text-black-400 transition" borderWidth="0" tap="searchTap" col="1" />
        <!-- Ikon Mikrofon -->
        <!-- <Label text="&#xf1da;" class="text-blue-500 text-2xl fas" col="2" /> -->
				<Button col="2"
					textWrap="true"
					tap="historyTap"
					class="text-center text-black-900 border-white text-2xl rounded-full bg-white active:bg-gray-100 active:scale-95 transition duration-150"
					width="50"
					height="50"
				>
					<Span text="&#xf1da;" class="fas" />
				</Button>
      </GridLayout>
    </StackLayout>

		<!-- BannerAd -->
    <ui:BannerAd
			unitId="ca-app-pub-1640120316722376/2423878232"
			layoutChanged="bannerAdLoaded" row="2" class="mt-2" />

		<!-- Daily Proverb -->
		<GridLayout  row="3" rows="auto,*" class="mt-2 mb-3">
			<Label row="0" class="text-center text-gray-700 text-[16px] mb-2" textWrap="true">
				<FormattedString>
					<Span text="&#xf5da;" class="fas" />
					<Span text="&nbsp;&nbsp;" />
					<Span text="Peribahasa Hari Ini" />
				</FormattedString>
			</Label>
			<gv:CollectionView items="{{ dailyProverbItems }}" itemTap="onTapDailyProverb" orientation="horizontal" colWidth="100%" row="1">
				<gv:CollectionView.itemTemplate>
					<GridLayout>
						<GridLayout rows="auto,*,auto,10,auto,*,auto" class="rounded-2xl border-2 border-gray-400 bg-white pt-2 pb-4 pl-2 pr-2 ">

							<Label row="2" class="mx-2 text-center text-gray-500 rounded-full text-center text-[14px] " fontWeight="900" textWrap="true">
								<FormattedString>
									<Span text="&#xf10d;" class="fas" />
									<Span text="&nbsp;&nbsp;" />
									<Span text="{{ word }}" />
									<Span text="&nbsp;&nbsp;" />
									<Span text="&#xf10e;" class="fas" />
								</FormattedString>
							</Label>
							<Label row="4" class="text-gray-500 text-center italic text-[22px]" textWrap="true">
								<FormattedString>
									<Span text="{{ arti }}" />
								</FormattedString>
							</Label>
							<!-- <Label row="6" class="text-center text-blue-600 text-center text-[14px]" textWrap="true">
								<FormattedString>
									<Span text="{{ id }}" />
								</FormattedString>
							</Label> -->
						</GridLayout>
					</GridLayout>
				</gv:CollectionView.itemTemplate>
			</gv:CollectionView>
		</GridLayout>

		<!-- InterstitialAd -->
		<StackLayout verticalAlignment="middle" padding="0 20" row="4">
			<GridLayout rows="auto, auto" columns="*, auto, *"
					visibility="{{ isWatchInterstitialAd ? 'visible' : 'collapsed' }}">
					<StackLayout orientation="horizontal" horizontalAlignment="center" row="0" col="1">
							<ActivityIndicator busy="true" width="20" height="20" />
							<Label
									textWrap="true"
									class="text-center"
									color="#90CAF9"
									fontWeight="bold"
							>
									<FormattedString>
											<Span text="&nbsp;&nbsp;" />
											<Span class="popin-r" text="Menyiapkan iklan..." />
									</FormattedString>
							</Label>
					</StackLayout>
					<Label
							text="Iklan akan muncul dalam beberapa detik."
							textWrap="true"
							class="text-center"
							fontStyle="italic"
							color="#757575"
							row="1" col="1"
					/>
			</GridLayout>
			<StackLayout
					tap="watchInterstitialAd"
					visibility="{{ !isWatchInterstitialAd ? 'visible' : 'collapsed' }}">
					<Label
							textWrap="true"
							class="text-center"
							color="#FBC02D"
							fontWeight="bold"
					>
							<FormattedString>
									<Span class="fas" text="&#xf641;" />
									<Span text="&nbsp;&nbsp;" />
									<Span class="popin-r" text="Tonton Iklan Sekarang" />
							</FormattedString>
					</Label>
					<Label
							text="Dukung kami dengan meluangkan waktu untuk menonton iklan."
							textWrap="true"
							class="text-center"
							fontStyle="italic"
							color="#757575"
					/>
			</StackLayout>
		</StackLayout>
  </GridLayout>
</Page>
