<Page actionBarHidden="false"
	loaded="onLoaded" 
	xmlns:admob="@nativescript/firebase-admob"
	xmlns:mdt="@nativescript-community/ui-material-tabs">
	
	<ActionBar flat="true">
		<GridLayout 
			columns="*, 5, auto, 15">
			<Label 
				text="Rincian Kata" 
				class="popin-br text-left text-black"
				textWrap="true"
				col="0" />
			<Button
				text="&#xf002;"
				textWrap="true"
				tap="close"
				class="text-center text-black fas text-[18px] border-none rounded-full bg-none active:bg-gray-100 active:scale-95 transition duration-150"
				width="50"
				col="2"
				/>
		</GridLayout>
	</ActionBar>
	
	<GridLayout rows="10, auto, 15, *, 0, auto">
		<!-- <GridLayout rows="auto, auto" columns="*, auto, *" row="1"> -->
			<Label
				class="text-center text-black text-[20px] px-5 py-2"
				textWrap="true" row="1">
				<FormattedString>
					<Span text="&#xf10d;" class="fas" />
					<Span text="&nbsp;&nbsp;" />
					<Span text="{{ keyword }}" class="popin-r" />
					<Span text="&nbsp;&nbsp;" />
					<Span text="&#xf10e;" class="fas" />
				</FormattedString>
			</Label>
		<!-- </GridLayout> -->
		<GridLayout rows="auto, 0, *" row="3" class="bg-gray-200 pt-5" borderRadius="45 45 0 0">
			<mdt:Tabs swipeEnabled="false" tabsPosition="top" row="2">
        <!-- The bottom tab UI is created via TabStrip (the containier) and TabStripItem (for each tab)-->
        <mdt:TabStrip>
					<mdt:TabStripItem>
						<Label text="KBBI Luring" class="popin-r"></Label>
						<!-- <Image src="font://&#xf015;" class="fas"></Image> -->
					</mdt:TabStripItem>
					<mdt:TabStripItem>
						<Label text="KBBI Daring" class="popin-r"></Label>
						<!-- <Image src="font://&#xf0ac;" class="fas" height="10" width="10"></Image> -->
					</mdt:TabStripItem>
        </mdt:TabStrip>

        <!-- The number of TabContentItem components should corespond to the number of TabStripItem components -->
        <mdt:TabContentItem>
					<ListView 
						class="mx-5 my-3"
						separatorColor="#f5f5f5"
						items="{{ data }}"
						itemTap="onItemTap"
						visibility="{{ data.length ? 'visible' : 'collapsed' }}" 
						>
						<ListView.itemTemplate>
							<GridLayout rows="auto, auto, auto" columns="*, auto" class="pb-3">
								<Label textWrap="true" class="popin-b text-black text-[16px] my-2" row="0" col="0" colSpan="2">
									<FormattedString>
										<!-- <Span text="&#xf058;" class="fas" /> -->
										<Span text="{{ (index+1) + '.' }}" />
										<Span text="&nbsp;&nbsp;" />
										<Span text="{{ word }}" />
									</FormattedString>
								</Label>

								<!-- <Label textWrap="true" class="text-black text-[16px] my-2" row="0" col="1">
									<FormattedString>
										<Span text="&#xf02e;" class="far" />
									</FormattedString>
								</Label> -->

								<!-- <ui:Label html="{{ arti }}" class="text-black" row="1" col="0" colSpan="2" /> -->
								<HtmlView html="{{ arti }}" class="text-black" row="1" col="0" colSpan="2" />

								<!-- <ui:BannerAd class="mt-3" row="2" col="0" colSpan="2"
									visibility="{{ index % 3 === 0 ? 'visible' : 'collapsed' }}"
									height="70"
									width="350"
									unitId="ca-app-pub-1640120316722376/2423878232"
									layoutChanged="bannerAdLoaded" /> -->
							</GridLayout>
						</ListView.itemTemplate>
					</ListView>
        </mdt:TabContentItem>
        <mdt:TabContentItem>
					<GridLayout>
							<Label text="KBBI daring akan segera hadir" class="h2 text-center"></Label>
					</GridLayout>
        </mdt:TabContentItem>
			</mdt:Tabs>
			
		</GridLayout>

		<!-- Text Info -->
		<StackLayout class="bg-gray-200" row="5">
			<admob:BannerAd
				height="70"
				width="350"
				unitId="ca-app-pub-1640120316722376/2423878232"
				layoutChanged="bannerAdLoaded" />
		</StackLayout>
	</GridLayout>
</Page>
