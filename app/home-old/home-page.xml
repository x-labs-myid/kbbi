	<GridLayout rows="auto, *, 0, auto, 0" class="p-5">
		<ui:BannerAd
			height="70"
			width="350"
			unitId="ca-app-pub-1640120316722376/2423878232"
			layoutChanged="bannerAdLoaded" row="0" />
		<!-- <StackLayout row="0">
			<Label
				text="syncronize progress"
				textWrap="true"
				class="text-center text-black text-[18px]"
				/>
			<Label
				text="{{ syncronize }}"
				textWrap="true"
				class="text-center text-black bold text-[24px]"
				/>
			<Label text="Sinkronisasi sedang berlangsung..." />
			<Progress id="progressBar" value="0" maxValue="100" />
			<Label id="progressLabel" text="Progres: 0%" />
		</StackLayout> -->
		<GridLayout 
			verticalAlignment="middle" 
			rows="auto, auto, 5, auto, 25, auto, 10, auto" 
			columns="*, 5, auto, 5, auto" row="1">
			<Label row="0" col="0" colSpan="3"
				text="&#xf5da;"
				textWrap="true"
				class="text-left text-black fas text-[36px]"
				/>
			<Label row="1" col="0" colSpan="3"
				text="Kamus Besar Bahasa Indonesia"
				textWrap="true"
				class="text-left text-black popin-r text-[42px]"
				/>
			<Button row="3" col="0"
					textWrap="true"
					tap="searchTap"
					class="text-left text-black border-none rounded-full bg-gray-200 px-5 py-3 active:bg-gray-300 active:scale-95 transition duration-150"
			>
				<Span text="&#xf002;" class="fas" />
				<Span text="&nbsp;&nbsp;" />
				<Span text="Cari..." class="popin-r" />
			</Button>
			<!-- <Button row="3" col="2"
				textWrap="true"
				tap="bookmarkTap"
				class="text-center text-white border-none rounded-full bg-black px-5 py-3 active:bg-gray-300 active:scale-95 transition duration-150"
				width="50"
			>
				<Span text="&#xf02e;" class="fas" />
			</Button> -->
			<Button row="3" col="4"
				textWrap="true"
				tap="aboutTap"
				class="text-center text-white border-none rounded-full bg-black px-5 py-3 active:bg-gray-300 active:scale-95 transition duration-150"
				width="50"
			>
				<Span text="&#xf129;" class="fas" />
			</Button>

			<Label class="text-center text-black text-[16px]" textWrap="true" row="5" col="0" colSpan="5">
				<FormattedString>
					<Span text="&#xe561;" class="fas" />
					<Span text="&nbsp;&nbsp;" />
					<Span text="Kata Populer Minggu Ini" />
				</FormattedString>
			</Label>
			<gv:CollectionView items="{{ dailyWordItems }}" itemTap="onTapWeeklyWord" orientation="vertical" colWidth="50%" row="7" col="0" colSpan="5">
				<gv:CollectionView.itemTemplate>
					<GridLayout>
						<Label  class="rounded-full border-2 border-black text-black text-center mr-3 mb-3 py-1" textWrap="true">
							<FormattedString>
								<Span text="{{ id }}" />
								<Span text=".&nbsp;&nbsp;" />
								<Span text="{{ word }}" />
							</FormattedString>
						</Label>
					</GridLayout>
				</gv:CollectionView.itemTemplate>
			</gv:CollectionView>

		</GridLayout>
		<StackLayout verticalAlignment="middle" padding="0 20" row="3">
			<GridLayout rows="auto, auto" columns="*, auto, *"
					visibility="{{ isWatchInterstitialAd ? 'visible' : 'collapsed' }}">
					<StackLayout orientation="horizontal" horizontalAlignment="center" row="0" col="1">
							<ActivityIndicator busy="true" width="20" height="20" />
							<Label
									textWrap="true"
									class="text-center"
									color="#90CAF9"
									fontWeight="bold"
							>
									<FormattedString>
											<!-- <Span class="fas" text="&#xf641;" /> -->
											<Span text="&nbsp;&nbsp;" />
											<Span class="popin-r" text="Menyiapkan iklan..." />
									</FormattedString>
							</Label>
					</StackLayout>
					<Label
							text="Iklan akan muncul dalam beberapa detik."
							textWrap="true"
							class="text-center"
							fontStyle="italic"
							color="#757575"
							row="1" col="1"
					/>
			</GridLayout>
			<StackLayout 
					tap="watchInterstitialAd" 
					visibility="{{ !isWatchInterstitialAd ? 'visible' : 'collapsed' }}">
					<Label
							textWrap="true"
							class="text-center"
							color="#FBC02D"
							fontWeight="bold"
					>
							<FormattedString>
									<Span class="fas" text="&#xf641;" />
									<Span text="&nbsp;&nbsp;" />
									<Span class="popin-r" text="Tonton Iklan Sekarang" />
							</FormattedString>
					</Label>
					<Label
							text="Dukung kami dengan meluangkan waktu untuk menonton iklan."
							textWrap="true"
							class="text-center"
							fontStyle="italic"
							color="#757575"
					/>
			</StackLayout>
		</StackLayout>
	</GridLayout>
</Page>
